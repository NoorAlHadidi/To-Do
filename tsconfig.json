{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",

    "rootDir": ".",
    "outDir": "dist",

    "moduleResolution": "node",

    "strict": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "resolveJsonModule": true,
    "sourceMap": true,

    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
